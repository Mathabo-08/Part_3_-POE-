@model ModuleScheduleViewModel

<h2>Module Schedules</h2>

<!-- Display success message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Schedule Table -->
<table class="table">
    <thead>
        <tr>
            <th>Module Code</th>
            <th>Reminder Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules)
        {
            <tr>
                <td>@schedule.ModuleCode</td>
                <td>@schedule.ReminderDay</td>
                <td>
                    <a href="@Url.Action("DeleteReminder", "ModuleSchedule", new { id = schedule.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Reminder Form -->
<h3>Add/Update Reminder</h3>
<form method="post" asp-action="AddOrUpdateReminder">
    <div class="form-group">
        <label for="ModuleCode">Module Code</label>
        <input type="text" id="ModuleCode" name="ModuleCode" class="form-control" value="@Model.ScheduleForm.ModuleCode" />
        @Html.ValidationMessageFor(m => m.ModuleCode)
    </div>

    <div class="form-group">
        <label for="ReminderDay">Reminder Day</label>
        <input type="text" id="ReminderDay" name="ReminderDay" class="form-control" value="@Model.ScheduleForm.ReminderDay" />
        @Html.ValidationMessageFor(m => m.ReminderDay)
    </div>

    <button type="submit" class="btn btn-primary">Save Reminder</button>
</form>

<!-- Validation Summary -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })