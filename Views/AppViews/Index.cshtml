@model IEnumerable<ModuleSchedule>
@{
    ViewData["Title"] = "Module Reminders";
}

<h2>Module Reminders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Module Code</th>
            <th>Reminder Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.ModuleCode</td>
                <td>@schedule.ReminderDay</td>
                <td>
                    <form asp-action="DeleteReminder" asp-route-id="@schedule.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Add or Update Reminder</h3>
<form asp-action="AddOrUpdateReminder" method="post">
    <div class="form-group">
        <label for="ModuleCode">Module Code</label>
        <input type="text" name="ModuleCode" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ReminderDay">Reminder Day</label>
        <select name="ReminderDay" class="form-control" required>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Reminder</button>
</form>
